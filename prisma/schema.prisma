generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id         String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title      String
  completed  Boolean  @default(false)
}
