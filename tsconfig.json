{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false,
    "resolveJsonModule": true,
    "baseUrl": "src",
    
    "paths": {
      "@tasks/*": ["modules/tasks/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "jest.config.ts"
  ]
}